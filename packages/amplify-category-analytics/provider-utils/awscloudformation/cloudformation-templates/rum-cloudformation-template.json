{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Cloudwatch RUM resource stack creation using Amplify CLI",
  "Parameters": {
    "env": {
      "Type": "String"
    },
    "rumMonitorName": {
      "Type": "String"
    },
    "domainName": {
      "Type": "String"
    },
    "enableXRay": {
      "Type": "String",
      "AllowedValues": [
        "true",
        "false"
      ]
    },
    "allowedCookies": {
      "Type": "String",
      "AllowedValues": [
        "true",
        "false"
      ]
    },
    "enableCwLogs": {
      "Type": "String",
      "AllowedValues": [
        "true",
        "false"
      ]
    },
    "sessionSampleRate": {
      "Type": "Number"
    },
    "telemetries": {
      "Type": "CommaDelimitedList"
    },
    "authPolicyName": {
      "Type": "String"
    },
    "unauthPolicyName": {
      "Type": "String"
    },
    "authRoleName": {
      "Type": "String"
    },
    "unauthRoleName": {
      "Type": "String"
    }
  },
  "Resources": {
    "RUMMonitor": {
      "Type": "AWS::RUM::AppMonitor",
      "Properties": {
        "Name": {
          "Fn::Join": [
            "-",
            [
              {
                "Ref": "rumMonitorName"
              },
              {
                "Ref": "env"
              }
            ]
          ]
        },
        "Domain": {
          "Ref": "domainName"
        },
        "CwLogEnabled": {
          "Ref": "enableCwLogs"
        },
        "AppMonitorConfiguration": {
          "AllowCookies": {
            "Ref": "enableCookies"
          },
          "SessionSampleRate": {
            "Ref": "sessionSampleRate"
          },
          "Telemetries": {
            "Ref": "telemetries"
          },
          "EnableXRay": {
            "Ref": "enableXRay"
          }
        }
      }
    },
    "CognitoUnauthPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Ref": "unauthPolicyName"
        },
        "Roles": [
          {
            "Ref": "unauthRoleName"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rum:PutRumEvents"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:rum:*:",
                      {
                        "Fn::Select": [
                          "4",
                          {
                            "Fn::Split": [
                              ":",
                              {
                                "Ref": "authRoleArn"
                              }
                            ]
                          }
                        ]
                      },
                      ":appmonitor/",
                      {
                        "Ref": "RUMMonitor"
                      }
                    ]
                  ]
                }
              ]
            }
          ]
        }
      }
    },
    "CognitoAuthPolicy": {
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": {
          "Ref": "authPolicyName"
        },
        "Roles": [
          {
            "Ref": "authRoleName"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "rum:PutRumEvents"
              ],
              "Resource": [
                {
                  "Fn::Join": [
                    "",
                    [
                      "arn:aws:rum:*:",
                      {
                        "Fn::Select": [
                          "4",
                          {
                            "Fn::Split": [
                              ":",
                              {
                                "Ref": "authRoleArn"
                              }
                            ]
                          }
                        ]
                      },
                      ":appmonitor/",
                      {
                        "Ref": "RUMMonitor"
                      }
                    ]
                  ]
                }
              ]
            }
          ]
        }
      }
    }
  },
  "Outputs": {
  }
}
